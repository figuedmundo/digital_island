<tr>
  <td><%= item.id %></td>
  <td><%= link_to "#{item.detalle[0..20]}", item %></td>
  <td><%= item.estado %></td>

  <% unless current_user.cliente? %>
  <td><%= link_to "#{item.usuario.nombre_completo}", item.usuario%></td>
  <td><%= item.tecnico %></td>
  <% end -%>

  <td><%= item.created_at.localtime.strftime("%d-%m-%y") %></td>
  <td><%= item.updated_at.localtime.strftime("%d-%m-%y") if item.estado == 'entregado' %></td>


  <td><%= "#{item.ac}" unless item.ac.nil? %></td>
  <td><%= "#{item.trabajo}" unless item.ac.nil? %></td>
  <td><%= "#{item.repuesto}" unless item.ac.nil? %></td>
  <td><%= "#{item.total}" unless item.total.nil? %></td>


  <% if current_user.admin? %>
  <td><%= link_to "delete", item, method: :delete,
                                  confirm: "Seguro??" %></td>
  <% end -%>
</tr>