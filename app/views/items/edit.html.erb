<div class="row">
  
  <div class="span8 offset2">
    <h1>Editar Item # <%= @item.id %></h1>

    <%= form_for(@item, html: { class: "form-horizontal" })  do |f| -%>
    <fieldset>
      <div class="control-group">
          <%= f.label :detalle, class: "control-label" %>
        <div class="controls">
          <%= f.text_area :detalle , rows: "10", readonly: "readonly"%>
        </div>
      </div>
      <div class="control-group">
          <%= f.label :reporte, class: "control-label" %>
        <div class="controls">
          <%= f.text_area :reporte , rows: "10"%>
        </div>
      </div>
      
      <div class="form-actions">
        <%= f.submit "Guardar", class: "btn btn-primary" %>
        <%= link_to "Cancelar", root_path, class: "btn" %>
      </div>      
    </fieldset>
    <% end -%>
  </div>
</div>