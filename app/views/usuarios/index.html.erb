<h1>
  Lista de los Usuarios
</h1>

<div class="users">
  
  <table id="usuarios" class="table table-striped">

    <thead>
      <tr>
        <th>Nombre</th>
        <th>Telefono</th>
        <th>Email</th>
        <th>Permiso</th>

      </tr>
    </thead>


    <tbody><% @usuarios.each do |usuario| %>
      <% unless current_user == usuario || usuario.admin? %>
          <tr>
            <td><%= link_to "#{usuario.nombre} #{usuario.apellido}", usuario %></td>
            <td><%= usuario.telefono %></td>
            <td><%= usuario.email %></td>
            <td><%= rol(usuario)  %></td>
            <% if current_user.admin? %>
            <td><%= usuario.created_by%></td>
            <td><%= usuario.created_at.strftime("%d-%m-%Y")%></td>
            <td><%= link_to 'delete', usuarios_path(usuario), action: 'delete' %></td>
            <% end -%>
          </tr>
        <% end -%>
      <% end -%>
    </tbody>


  </table>


</div>