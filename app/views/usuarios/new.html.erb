<h1>Registro</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @usuario do |f| -%>

      <%= f.label :nombre %>
      <%= f.text_field :nombre %>

      <%= f.label :apellido %>
      <%= f.text_field :apellido %>
      
      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :telefono %>
      <%= f.text_field :telefono %>
      
      <%= f.label :password %>
      <%= f.password_field :password %>
      
      <%= f.label :password_confirmation, "Confirmar Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Crear cuenta",  class: "btn btn-large btn-danger" %>      
      
    <% end -%>
  </div>
</div>